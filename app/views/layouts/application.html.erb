<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">

      <%= link_to "Bookers", root_path, class:"navbar-brand" %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

          <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user.id), class: "text-light",method: :get do %>
             <i class="fas fa-home nav-link"></i>Home
             <% end %>
          </li>

          <li>
            <%= link_to users_path, class: "text-light",method: :get do %>
            <i class= "fas fa-users nav-link"></i>Users
            <% end %>
          </li>
          <li>
            <%= link_to books_path, class: "text-light", method: :get do %>
            <i class= "fas fa-book-open nav-link"></i>Books
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, class: "text-light", method: :delete do %>
            <i class= "fas fa-sign-out-alt nav-link"></i>logout
            <% end %>
            </li>

          <% else %>
          <li>
            <%= link_to root_path, class: "text-light",method: :get do %>
             <i class="fas fa-home nav-link"></i>Home
             <% end %>
          </li>
          <li>
            <%= link_to home_about_path, class: "text-light",method: :get do %>
             <i class="fas fa-link nav-link"></i>About
             <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path, class: "text-light",method: :get do %>
             <i class="fas fa-user-plus nav-link"></i>sign up
             <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path, class: "text-light",method: :get do %>
             <i class="fas fa-sign-in-alt nav-link"></i>login
             <% end %>
          </li>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>






    <%= yield %>
  </body>
</html>


