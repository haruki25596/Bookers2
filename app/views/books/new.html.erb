<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
   <p>投稿ユーザー画像：<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpeg" %></p>

  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
<!-- form_with部分 -->
<%= form_with model:@book,local:true do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
<% @books.each do |book| %>
 <tr>
   <td><%= attachment_image_tag book.user, :profile_image, :fill, 10, 10, fallback: "no_image.jpeg" %></td>
   <td><%= link_to book.title, book_path(book.id)  %></td>
   <td><%= book.body %></td>
   <% end %>
   </table>

