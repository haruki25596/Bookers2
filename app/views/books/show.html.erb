<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<%= render 'users/list', user: @user, book: @book %>



   <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class="table">
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, size: "50x50", fallback: "no_image.jpeg" %><br />
              <%= @user.name %>
            <% end %>
          </td>
          <td>
              <%= link_to @books.title, book_path(@books) %>
          </td>
          <td><%= @books.body %></td>
          <% if @user == current_user %>
            <td>
              <%= link_to edit_book_path(@books), class: "btn btn-sm btn-success", method: :get do %>Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } do %>Destroy
              <% end %>
           </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
    <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>